{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "fh-mbaas",
    "annotations": {
      "templateVersion": "0.26.12",
      "description": "Red Hat Mobile Backend as a Service template",
      "iconClass": "icon-nodejs"
    }
  },
  "objects": [
    {
      "kind": "ConfigMap",
      "apiVersion": "v1",
      "metadata": {
        "name": "fh-mbaas-info"
      },
      "data": {
        "version": "4.3.0"
      }
    },
    {
      "kind": "ConfigMap",
      "apiVersion": "v1",
      "metadata": {
        "name": "node-proxy"
      },
      "data": {
        "https-proxy": "${PROXY_URL}",
        "http-proxy": "${PROXY_URL}",
        "no-proxy": "fh-mbaas-service, fh-messaging-service, fh-metrics-service, fh-statsd-service, mongodb-1, mongodb-2, mongodb-3"
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "mongodb-1",
        "labels": {
          "name": "mongodb-1"
        }
      },
      "spec": {
        "ports": [
          {
            "port": 27017
          }
        ],
        "selector": {
          "name": "mongodb-replica-1"
        },
        "clusterIP": "None"
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "mongodb-2",
        "labels": {
          "name": "mongodb-2"
        }
      },
      "spec": {
        "ports": [
          {
            "port": 27017
          }
        ],
        "selector": {
          "name": "mongodb-replica-2"
        },
        "clusterIP": "None"
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "mongodb-3",
        "labels": {
          "name": "mongodb-3"
        }
      },
      "spec": {
        "ports": [
          {
            "port": 27017
          }
        ],
        "selector": {
          "name": "mongodb-replica-3"
        },
        "clusterIP": "None"
      }
    },
    {
      "kind": "PersistentVolumeClaim",
      "apiVersion": "v1",
      "metadata": {
        "name": "mongodb-claim-1"
      },
      "spec": {
        "accessModes": [
          "ReadWriteOnce"
        ],
        "resources": {
          "requests": {
            "storage": "${MONGODB_PVC_SIZE}"
          }
        }
      }
    },
    {
      "kind": "PersistentVolumeClaim",
      "apiVersion": "v1",
      "metadata": {
        "name": "mongodb-claim-2"
      },
      "spec": {
        "accessModes": [
          "ReadWriteOnce"
        ],
        "resources": {
          "requests": {
            "storage": "${MONGODB_PVC_SIZE}"
          }
        }
      }
    },
    {
      "kind": "PersistentVolumeClaim",
      "apiVersion": "v1",
      "metadata": {
        "name": "mongodb-claim-3"
      },
      "spec": {
        "accessModes": [
          "ReadWriteOnce"
        ],
        "resources": {
          "requests": {
            "storage": "${MONGODB_PVC_SIZE}"
          }
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "mongodb-1",
        "labels": {
          "name": "mongodb"
        }
      },
      "spec": {
        "strategy": {
          "type": "Recreate",
          "resources": {
            "limits": {
              "cpu": "1000m",
              "memory": "1000Mi"
            },
            "requests": {
              "cpu": "200m",
              "memory": "200Mi"
            }
          }
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "mongodb-replica-1"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "mongodb-replica-1"
            }
          },
          "spec": {
            "nodeSelector": {
              "mbaas_id": "mbaas1"
            },
            "volumes": [
              {
                "name": "mongodb-data-volume",
                "persistentVolumeClaim": {
                  "claimName": "mongodb-claim-1"
                }
              }
            ],
            "containers": [
              {
                "name": "mongodb",
                "image": "${MONGODB_IMAGE}:${MONGODB_IMAGE_VERSION}",
                "command": ["run-mongod-replication"],
                "ports": [
                  {
                    "containerPort": 27017
                  }
                ],
                "volumeMounts": [
                  {
                    "name": "mongodb-data-volume",
                    "mountPath": "/var/lib/mongodb/data"
                  }
                ],
                "env": [
                  {
                    "name": "MONGODB_REPLICA_NAME",
                    "value": "${MONGODB_REPLICA_NAME}"
                  },
                  {
                    "name": "MONGODB_SERVICE_NAME",
                    "value": "mongodb"
                  },
                  {
                    "name": "MONGODB_KEYFILE_VALUE",
                    "value": "${MONGODB_KEYFILE_VALUE}"
                  },
                  {
                    "name": "MONGODB_FHMBAAS_USER",
                    "value": "${MONGODB_FHMBAAS_USER}"
                  },
                  {
                    "name": "MONGODB_FHMBAAS_PASSWORD",
                    "value": "${MONGODB_FHMBAAS_PASSWORD}"
                  },
                  {
                    "name": "MONGODB_FHMBAAS_DATABASE",
                    "value": "fh-mbaas"
                  },
                  {
                    "name": "FHMBAAS_KEY",
                    "value": "${FHMBAAS_KEY}"
                  },
                  {
                    "name": "MONGODB_ADMIN_PASSWORD",
                    "value": "${MONGODB_ADMIN_PASSWORD}"
                  },
                  {
                    "name": "MONGODB_FHSTATSD_USER",
                    "value": "${MONGODB_FHSTATSD_USER}"
                  },
                  {
                    "name": "MONGODB_FHSTATSD_PASSWORD",
                    "value": "${MONGODB_FHSTATSD_PASSWORD}"
                  },
                  {
                    "name": "MONGODB_FHSTATSD_DATABASE",
                    "value": "fh-statsd"
                  },
                  {
                    "name": "MONGODB_FHREPORTING_USER",
                    "value": "${MONGODB_FHREPORTING_USER}"
                  },
                  {
                    "name": "MONGODB_FHREPORTING_PASSWORD",
                    "value": "${MONGODB_FHREPORTING_PASSWORD}"
                  },
                  {
                    "name": "MONGODB_FHREPORTING_DATABASE",
                    "value": "fh-reporting"
                  }
                ],
                "resources": {
                  "limits": {
                    "cpu": "1000m",
                    "memory": "1000Mi"
                  },
                  "requests": {
                    "cpu": "200m",
                    "memory": "200Mi"
                  }
                },
                "imagePullPolicy": "IfNotPresent"
              }
            ]
          }
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "mongodb-2",
        "labels": {
          "name": "mongodb"
        }
      },
      "spec": {
        "strategy": {
          "type": "Recreate",
          "resources": {
            "limits": {
              "cpu": "1000m",
              "memory": "1000Mi"
            },
            "requests": {
              "cpu": "200m",
              "memory": "200Mi"
            }
          }
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "mongodb-replica-2"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "mongodb-replica-2"
            }
          },
          "spec": {
            "nodeSelector": {
              "mbaas_id": "mbaas2"
            },
            "volumes": [
              {
                "name": "mongodb-data-volume",
                "persistentVolumeClaim": {
                  "claimName": "mongodb-claim-2"
                }
              }
            ],
            "containers": [
              {
                "name": "mongodb",
                "image": "${MONGODB_IMAGE}:${MONGODB_IMAGE_VERSION}",
                "command": ["run-mongod-replication"],
                "ports": [
                  {
                    "containerPort": 27017
                  }
                ],
                "volumeMounts": [
                  {
                    "name": "mongodb-data-volume",
                    "mountPath": "/var/lib/mongodb/data"
                  }
                ],
                "env": [
                  {
                    "name": "MONGODB_REPLICA_NAME",
                    "value": "${MONGODB_REPLICA_NAME}"
                  },
                  {
                    "name": "MONGODB_SERVICE_NAME",
                    "value": "mongodb"
                  },
                  {
                    "name": "MONGODB_KEYFILE_VALUE",
                    "value": "${MONGODB_KEYFILE_VALUE}"
                  },
                  {
                    "name": "MONGODB_FHMBAAS_USER",
                    "value": "${MONGODB_FHMBAAS_USER}"
                  },
                  {
                    "name": "MONGODB_FHMBAAS_PASSWORD",
                    "value": "${MONGODB_FHMBAAS_PASSWORD}"
                  },
                  {
                    "name": "MONGODB_FHMBAAS_DATABASE",
                    "value": "fh-mbaas"
                  },
                  {
                    "name": "FHMBAAS_KEY",
                    "value": "${FHMBAAS_KEY}"
                  },
                  {
                    "name": "MONGODB_ADMIN_PASSWORD",
                    "value": "${MONGODB_ADMIN_PASSWORD}"
                  },
                  {
                    "name": "MONGODB_FHSTATSD_USER",
                    "value": "${MONGODB_FHSTATSD_USER}"
                  },
                  {
                    "name": "MONGODB_FHSTATSD_PASSWORD",
                    "value": "${MONGODB_FHSTATSD_PASSWORD}"
                  },
                  {
                    "name": "MONGODB_FHSTATSD_DATABASE",
                    "value": "fh-statsd"
                  },
                  {
                    "name": "MONGODB_FHREPORTING_USER",
                    "value": "${MONGODB_FHREPORTING_USER}"
                  },
                  {
                    "name": "MONGODB_FHREPORTING_PASSWORD",
                    "value": "${MONGODB_FHREPORTING_PASSWORD}"
                  },
                  {
                    "name": "MONGODB_FHREPORTING_DATABASE",
                    "value": "fh-reporting"
                  }
                ],
                "resources": {
                  "limits": {
                    "cpu": "1000m",
                    "memory": "1000Mi"
                  },
                  "requests": {
                    "cpu": "200m",
                    "memory": "200Mi"
                  }
                },
                "imagePullPolicy": "IfNotPresent"
              }
            ]
          }
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "mongodb-3",
        "labels": {
          "name": "mongodb"
        }
      },
      "spec": {
        "strategy": {
          "type": "Recreate",
          "resources": {
            "limits": {
              "cpu": "1000m",
              "memory": "1000Mi"
            },
            "requests": {
              "cpu": "200m",
              "memory": "200Mi"
            }
          }
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "mongodb-replica-3"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "mongodb-replica-3"
            }
          },
          "spec": {
            "nodeSelector": {
              "mbaas_id": "mbaas3"
            },
            "volumes": [
              {
                "name": "mongodb-data-volume",
                "persistentVolumeClaim": {
                  "claimName": "mongodb-claim-3"
                }
              }
            ],
            "containers": [
              {
                "name": "mongodb",
                "image": "${MONGODB_IMAGE}:${MONGODB_IMAGE_VERSION}",
                "command": ["run-mongod-replication"],
                "ports": [
                  {
                    "containerPort": 27017
                  }
                ],
                "volumeMounts": [
                  {
                    "name": "mongodb-data-volume",
                    "mountPath": "/var/lib/mongodb/data"
                  }
                ],
                "env": [
                  {
                    "name": "MONGODB_REPLICA_NAME",
                    "value": "${MONGODB_REPLICA_NAME}"
                  },
                  {
                    "name": "MONGODB_SERVICE_NAME",
                    "value": "mongodb"
                  },
                  {
                    "name": "MONGODB_KEYFILE_VALUE",
                    "value": "${MONGODB_KEYFILE_VALUE}"
                  },
                  {
                    "name": "MONGODB_FHMBAAS_USER",
                    "value": "${MONGODB_FHMBAAS_USER}"
                  },
                  {
                    "name": "MONGODB_FHMBAAS_PASSWORD",
                    "value": "${MONGODB_FHMBAAS_PASSWORD}"
                  },
                  {
                    "name": "MONGODB_FHMBAAS_DATABASE",
                    "value": "fh-mbaas"
                  },
                  {
                    "name": "FHMBAAS_KEY",
                    "value": "${FHMBAAS_KEY}"
                  },
                  {
                    "name": "MONGODB_ADMIN_PASSWORD",
                    "value": "${MONGODB_ADMIN_PASSWORD}"
                  },
                  {
                    "name": "MONGODB_FHSTATSD_USER",
                    "value": "${MONGODB_FHSTATSD_USER}"
                  },
                  {
                    "name": "MONGODB_FHSTATSD_PASSWORD",
                    "value": "${MONGODB_FHSTATSD_PASSWORD}"
                  },
                  {
                    "name": "MONGODB_FHSTATSD_DATABASE",
                    "value": "fh-statsd"
                  },
                  {
                    "name": "MONGODB_FHREPORTING_USER",
                    "value": "${MONGODB_FHREPORTING_USER}"
                  },
                  {
                    "name": "MONGODB_FHREPORTING_PASSWORD",
                    "value": "${MONGODB_FHREPORTING_PASSWORD}"
                  },
                  {
                    "name": "MONGODB_FHREPORTING_DATABASE",
                    "value": "fh-reporting"
                  }
                ],
                "resources": {
                  "limits": {
                    "cpu": "1000m",
                    "memory": "1000Mi"
                  },
                  "requests": {
                    "cpu": "200m",
                    "memory": "200Mi"
                  }
                },
                "imagePullPolicy": "IfNotPresent"
              }
            ]
          }
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "FH_CLUSTER",
      "value": "development",
      "description": "the name of the cluster the mbaas was created from"
    },
    {
      "name": "FH_MBAASID",
      "description": "id of the mbaas generated.",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{20}"
    },
    {
      "name": "MONGODB_FHMBAAS_USER",
      "value": "mbaas-user",
      "description": "The MongoDB user name"
    },
    {
      "name": "MONGODB_FHMBAAS_PASSWORD",
      "description": "The MongoDB password",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}"
    },
    {
      "name": "FHMBAAS_KEY",
      "description": "The MBaaS key",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}"
    },
    {
      "name": "MONGODB_KEYFILE_VALUE",
      "description": "The value of the MongoDB Key",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{255}"
    },
    {
      "name": "MONGODB_ADMIN_PASSWORD",
      "description": "The MongoDB Admin password",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}"
    },
    {
      "name": "MONGODB_FORM_PASSWORD",
      "description": "The MongoDB Forms User password",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}"
    },
    {
      "name": "MONGODB_FHREPORTING_USER",
      "value": "reporting-user",
      "description": "The Reporting user name"
    },
    {
      "name": "MONGODB_FHREPORTING_PASSWORD",
      "description": "The MongoDB Reporting password",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}"
    },
    {
      "name": "FH_MBAAS_IMAGE",
      "value": "docker.io/feedhenry/fh-mbaas",
      "description": "The name of the fh-mbaas image"
    },
    {
      "name": "FH_MBAAS_IMAGE_VERSION",
      "value": "5.4.4-1333",
      "description": "The version for the FH_MBAAS_IMAGE"
    },
    {
      "name": "FH_MESSAGING_IMAGE",
      "value": "docker.io/feedhenry/fh-messaging",
      "description": "The name of the fh-messaging image"
    },
    {
      "name": "FH_MESSAGING_IMAGE_VERSION",
      "value": "3.0.7-488",
      "description": "The version for the FH_MESSAGING_IMAGE"
    },
    {
      "name": "FH_METRICS_IMAGE",
      "value": "docker.io/feedhenry/fh-metrics",
      "description": "The name of the fh-metrics image"
    },
    {
      "name": "FH_METRICS_IMAGE_VERSION",
      "value": "3.0.6-488",
      "description": "The version for the FH_METRICS_IMAGE"
    },
    {
      "name": "FH_STATSD_IMAGE",
      "value": "docker.io/feedhenry/fh-statsd",
      "description": "The name of the fh-statsd image"
    },
    {
      "name": "FH_STATSD_IMAGE_VERSION",
      "value": "2.0.4-127",
      "description": "The version for the FH_STATSD_IMAGE"
    },
    {
      "name": "MONGODB_IMAGE",
      "value": "docker.io/lzuccarelli/mongo",
      "description": "The name of the mongodb image"
    },
    {
      "name": "MONGODB_IMAGE_VERSION",
      "value": "16",
      "description": "The version for the MONGODB_IMAGE"
    },
    {
      "name": "FH_MESSAGING_API_KEY",
      "description": "Key for communicating with the FH_MESSAGING Service",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}"
    },
    {
      "name": "FH_METRICS_API_KEY",
      "description": "Key for communicating with the FH_METRICS Service",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}"
    },
    {
      "name": "MBAAS_ROUTER_DNS",
      "description": "The DNS name for the MBaaS Router",
      "value": ""
    },
    {
      "name": "ENDPOINT_COUNT",
      "description": "The number of databases to create in a replica set",
      "value": "3"
    },
    {
      "name": "FH_MBAAS_REPLICAS",
      "description": "Number of fh-mbaas replicas to create",
      "value": "3"
    },
    {
      "name": "FH_MESSAGING_REPLICAS",
      "description": "Number of fh-messaging replicas to create",
      "value": "3"
    },
    {
      "name": "FH_METRICS_REPLICAS",
      "description": "Number of fh-metrics replicas to create",
      "value": "3"
    },
    {
      "name": "FH_STATSD_API_KEY",
      "description": "Key for communicating with the FH_STATSD Service",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}"
    },
    {
      "name": "FH_DEFAULT_LOG_LEVEL",
      "description": "A default log level for all MBaaS components",
      "value": "info"
    },
    {
      "name": "MONGODB_PVC_SIZE",
      "description": "The size of the volume for MongoDB Data",
      "value": "50Gi",
      "required": true
    },
    {
      "name": "SMTP_SERVER",
      "description": "SMTP server address to use for sending alert emails e.g. 1.2.3.4:25",
      "value": "localhost"
    },
    {
      "name": "SMTP_USERNAME",
      "description": "SMTP username",
      "value": "username"
    },
    {
      "name": "SMTP_PASSWORD",
      "description": "SMTP password",
      "value": "password"
    },
    {
      "name": "SMTP_TLS",
      "description": "Use TLS for message delivery (auto|yes|no)",
      "value": "auto"
    },
    {
      "name": "SMTP_FROM_ADDRESS",
      "description": "From email address for alerts",
      "value": "admin@example.com"
    },
    {
      "name": "RHMAP_ADMIN_EMAIL",
      "description": "To email address for alerts",
      "value": "root@localhost"
    },
    {
      "name": "NAGIOS_USER",
      "description": "Nagios admin username",
      "value": "nagiosadmin"
    },
    {
      "name": "NAGIOS_PASSWORD",
      "description": "Nagios admin user password",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{10}"
    },
    {
      "name": "RHMAP_ROUTER_DNS",
      "description": "Host or Service name for RHMAP",
      "value": "localhost"
    },
    {
      "name": "RHMAP_HOSTGROUPS",
      "description": "RHMAP hostgroups being monitored (core|mbaas|core,mbaas)",
      "value": "mbaas"
    },
    {
      "name": "NAGIOS_IMAGE",
      "description": "The name of the Nagios Docker image",
      "value": "docker.io/rhmap/nagios4"
    },
    {
      "name": "NAGIOS_IMAGE_VERSION",
      "description": "The version of the Nagios Docker image",
      "value": "4.0.8-146"
    },
    {
      "name": "MONGODB_REPLICA_NAME",
      "description": "The mongodb replicaset name",
      "value": "rs0"
    },
    {
      "name": "PROXY_URL",
      "displayName": "Proxy Url",
      "value": "",
      "required": false
    }
  ]
}
